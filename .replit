modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]

[[workflows.workflow]]
name = "Build for GitHub Pages"
author = 41767715
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cp public/.nojekyll dist/"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Build complete! Files are in the 'dist' directory ready for GitHub Pages deployment.\""
